// Normalized vectors are treated as "scalar values"

tag screen3 is vec3;
tag color3 is vec3;

screen3 position = [1, 2, 3];

color3 rgb = [0, 1, 1];

// Normalized vectors are scalar values, where
// scalar values component-wise multiplied to a vector
// keeps a vector in the same space
// => SAFE!
rgb .*= norm position;